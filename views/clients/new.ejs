<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Client</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/clients" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="age" placeholder="age" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="email" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="account" placeholder="account number" required="true">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="money" placeholder="balance" required="true">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/clients">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>